{
  "name": "libpg-query-wasm",
  "version": "0.1.0",
  "description": "Webassembly bindings for libpg_query",
  "author": "Santeri Hiltunen <github@me.hilzu.moe> (https://hilzu.moe/)",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/Hilzu/libpg-query-node/tree/main/packages/libpg-query-wasm#readme",
  "bugs": {
    "url": "https://github.com/Hilzu/libpg-query-node/issues"
  },
  "repository": {
    "url": "git@github.com:Hilzu/libpg-query-node.git",
    "type": "git",
    "directory": "./packages/libpg-query-wasm"
  },
  "type": "module",
  "exports": "./libpg-query.mjs",
  "engines": {
    "node": "^18.0.0 || >=20.0.0",
    "npm": ">=9.8.1"
  },
  "scripts": {
    "build": "npm run clean && npm run build:libpg_query && npm run build:wasm && npm run build:wasm:types && npm run copy:proto",
    "build:libpg_query": "(cd libpg_query && sed -i.bak 's/AR = ar rs/AR = emar rs/' Makefile && emmake make build)",
    "build:wasm": "npm run emcc -- -o dist/lib.mjs",
    "build:wasm:types": "npm run emcc -- --embind-emit-tsd dist/lib.d.ts",
    "clean": "rm -rf dist/* && (cd libpg_query && make clean)",
    "copy:proto": "cp libpg_query/protobuf/pg_query.proto dist/",
    "emcc": "emcc -O3 -Wall -Werror --bind -I libpg_query -L libpg_query -l pg_query lib.cpp",
    "test": "node --test test/"
  },
  "dependencies": {
    "protobufjs": "~7.2.5"
  },
  "devDependencies": {}
}
